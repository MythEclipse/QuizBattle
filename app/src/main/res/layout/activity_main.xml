<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_main"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large">

        <!-- Header Section -->
        <TextView
            android:id="@+id/leaderboardTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/leaderboard"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@android:drawable/btn_star_big_on"
            android:drawablePadding="@dimen/spacing_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Leaderboard Podium -->
        <LinearLayout
            android:id="@+id/leaderboardLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:gravity="bottom|center"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leaderboardTitleTextView">

            <!-- 2nd Place -->
            <include
                android:id="@+id/secondPlaceItem"
                layout="@layout/item_leaderboard_podium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- 1st Place -->
            <include
                android:id="@+id/firstPlaceItem"
                layout="@layout/item_leaderboard_podium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- 3rd Place -->
            <include
                android:id="@+id/thirdPlaceItem"
                layout="@layout/item_leaderboard_podium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- User Info Card with Glassmorphism -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/card_border"
            app:strokeWidth="@dimen/border_width_thin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leaderboardLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_medium"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/userAvatarImageView"
                    android:layout_width="@dimen/avatar_size_medium"
                    android:layout_height="@dimen/avatar_size_medium"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    android:background="@color/background_gray"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_medium">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Halo, Guest!"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/userPointsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xxs"
                        android:text="Login untuk menyimpan progress"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- Points Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/pointsChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 pts"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/accent_purple"
                    app:chipCornerRadius="@dimen/button_corner_radius_small"
                    app:chipMinHeight="28dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Login Button (visible for guests only) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            style="@style/Widget.QuizBattle.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Login"
            android:visibility="visible"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userInfoCard" />

        <!-- Battle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/battleButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="âš”ï¸ Main Quiz (Offline)"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/button_corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginButton" />

        <!-- Manage Questions Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/manageQuestionsButton"
            style="@style/Widget.QuizBattle.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="ðŸ“ Manajemen Soal"
            app:strokeColor="@color/text_secondary"
            android:textColor="@color/text_on_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/battleButton" />

        <!-- Online Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/onlineButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="ðŸŒ Main Online"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_secondary"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/button_corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manageQuestionsButton" />

        <!-- Bottom Buttons Row -->
        <LinearLayout
            android:id="@+id/bottomButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onlineButton">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/friendsButton"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs"
                android:text="ðŸ‘¥"
                app:strokeColor="@color/text_secondary"
                android:textColor="@color/text_on_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/feedButton"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/spacing_xs"
                android:text="ðŸ“°"
                app:strokeColor="@color/text_secondary"
                android:textColor="@color/text_on_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profileButton"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="ðŸ‘¤"
                app:strokeColor="@color/text_secondary"
                android:textColor="@color/text_on_dark" />
        </LinearLayout>

        <!-- Bottom Labels Row -->
        <LinearLayout
            android:id="@+id/bottomLabelsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:layout_marginBottom="@dimen/spacing_large"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomButtonsLayout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Teman"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feed"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profil"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:gravity="center" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/primary_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
