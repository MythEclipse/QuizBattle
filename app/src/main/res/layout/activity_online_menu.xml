<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_large">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Online Battle"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_small" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_large">

        <!-- Icon -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:alpha="0.3" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="âš”ï¸"
                android:textSize="64sp" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="Choose Game Mode"
            android:textSize="@dimen/text_size_xxl"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Battle against other players online"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <!-- Quick Match Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/quickMatchButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="âš¡ Quick Match"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/button_corner_radius" />

        <!-- Create Room Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/createRoomButton"
            style="@style/Widget.QuizBattle.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="ðŸ  Create Room"
            android:textColor="@color/text_on_dark"
            app:strokeColor="@color/text_secondary" />

        <!-- Friend Battle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/friendBattleButton"
            style="@style/Widget.QuizBattle.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="ðŸ‘¥ Battle Friend"
            android:textColor="@color/text_on_dark"
            app:strokeColor="@color/text_secondary" />

    </LinearLayout>

</LinearLayout>
