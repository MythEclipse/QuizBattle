<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_large">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/leaderboard"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_small" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Global"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/white"
            app:cornerRadius="18dp"
            app:backgroundTint="@color/semi_transparent_black"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="@dimen/border_width_thin" />
    </LinearLayout>

    <!-- User Rank Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userRankCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation_high"
        app:cardBackgroundColor="@color/transparent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_medium"
            android:background="@drawable/bg_button_primary">

            <!-- User Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userAvatarImageView"
                android:layout_width="@dimen/avatar_size_medium"
                android:layout_height="@dimen/avatar_size_medium"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:strokeWidth="@dimen/border_width_normal"
                app:strokeColor="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/yourRankLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Rank"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/yourRankTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#-"
                    android:textSize="@dimen/text_size_xxl"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Players"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/totalPlayersTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_size_xxl"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Leaderboard List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_medium"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="64sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="No leaderboard data yet"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_on_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Play games to see rankings"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_blue" />

</LinearLayout>
