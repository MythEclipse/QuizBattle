<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_large">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/roomNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat Room"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_small"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Messages List -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_medium"
            android:clipToPadding="false" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/icon_size_xxl"
                android:layout_height="@dimen/icon_size_xxl"
                android:src="@drawable/ic_chat"
                app:tint="@color/text_secondary"
                android:contentDescription="No messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="No messages yet. Start the conversation!"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_secondary"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- Typing Indicator -->
    <TextView
        android:id="@+id/typingIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingVertical="@dimen/spacing_xs"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_secondary"
        android:textStyle="italic"
        android:visibility="gone" />

    <!-- Message Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_medium"
        android:background="@color/card_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/type_message"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/bg_input_field"
            android:padding="@dimen/spacing_medium"
            android:maxLines="4"
            android:inputType="textMultiLine"
            android:imeOptions="actionSend" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:layout_marginStart="@dimen/spacing_small"
            app:icon="@drawable/ic_send"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="@dimen/icon_size_normal"
            app:iconTint="@color/white"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/accent_gold"
            android:contentDescription="@string/send_message" />
    </LinearLayout>
</LinearLayout>
