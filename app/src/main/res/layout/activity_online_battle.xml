<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main">

    <!-- Top Info Bar -->
    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Match ID Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/matchIdChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match #12345"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xs"
            app:chipBackgroundColor="@color/semi_transparent_black"
            app:chipCornerRadius="@dimen/button_corner_radius_small" />

        <!-- Hidden original for compatibility -->
        <TextView
            android:id="@+id/matchIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Question Progress -->
        <com.google.android.material.chip.Chip
            android:id="@+id/questionProgressChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/10"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/accent_purple"
            app:chipCornerRadius="@dimen/button_corner_radius_small" />

        <!-- Hidden original for compatibility -->
        <TextView
            android:id="@+id/questionProgressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Timer -->
    <com.google.android.material.chip.Chip
        android:id="@+id/timerChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="⏱ 30s"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:chipBackgroundColor="@color/primary_red"
        app:chipCornerRadius="@dimen/button_corner_radius_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInfoBar" />

    <!-- Hidden original timer -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Battle Arena Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/battleArenaCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/battle_arena_height"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardBackgroundColor="@color/battle_arena_bg"
        app:cardElevation="@dimen/card_elevation_high"
        app:strokeWidth="@dimen/border_width_thin"
        app:strokeColor="@color/border_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerChip">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_battle_arena">

            <!-- Player Knight (Left) -->
            <ImageView
                android:id="@+id/playerKnightImageView"
                android:layout_width="@dimen/character_size_knight"
                android:layout_height="@dimen/character_size_knight"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/playerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="8dp"
                android:text="YOU"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:shadowColor="@color/glow_blue"
                android:shadowRadius="8" />

            <!-- Opponent Goblin (Right) -->
            <ImageView
                android:id="@+id/opponentGoblinImageView"
                android:layout_width="@dimen/character_size_goblin"
                android:layout_height="@dimen/character_size_goblin"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="16dp"
                android:scaleType="fitCenter"
                android:scaleX="-1" />

            <TextView
                android:id="@+id/opponentNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="8dp"
                android:text="OPPONENT"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_red"
                android:textStyle="bold"
                android:shadowColor="@color/gradient_red_end"
                android:shadowRadius="8" />

            <!-- Waiting indicator -->
            <ProgressBar
                android:id="@+id/opponentWaitingIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:layout_margin="@dimen/spacing_medium"
                android:visibility="gone"
                android:indeterminateTint="@color/primary_red" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Health Bars Section -->
    <LinearLayout
        android:id="@+id/scoresLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/battleArenaCard">

        <!-- Player Health -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card_glass"
            android:padding="@dimen/spacing_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR HP"
                android:textSize="@dimen/text_size_xs"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <ProgressBar
                android:id="@+id/playerHealthBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/health_bar_height"
                android:layout_marginTop="@dimen/spacing_xs"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/health_player"
                android:progressBackgroundTint="@color/health_track" />
        </LinearLayout>

        <!-- VS Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="⚔️"
            android:textSize="@dimen/text_size_xl"
            android:paddingHorizontal="@dimen/spacing_small" />

        <!-- Opponent Health -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card_glass"
            android:padding="@dimen/spacing_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPPONENT HP"
                android:textSize="@dimen/text_size_xs"
                android:textColor="@color/primary_red"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <ProgressBar
                android:id="@+id/opponentHealthBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/health_bar_height"
                android:layout_marginTop="@dimen/spacing_xs"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/health_opponent"
                android:progressBackgroundTint="@color/health_track" />
        </LinearLayout>
    </LinearLayout>

    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoresLayout">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_large"
            android:text="Waiting for question..."
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Answer Buttons -->
    <ScrollView
        android:id="@+id/answersScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/answersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton1"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Answer 1"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton2"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Answer 2"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton3"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Answer 3"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton4"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Answer 4"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />
        </LinearLayout>
    </ScrollView>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
