<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main">

    <!-- Top Info Bar -->
    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Timer - Prominent Display -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timerCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="@color/primary_red"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/spacing_large"
                android:paddingVertical="@dimen/spacing_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±"
                    android:textSize="@dimen/text_size_xl" />

                <TextView
                    android:id="@+id/timerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="10s"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxl"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Hidden question progress for compatibility -->
    <com.google.android.material.chip.Chip
        android:id="@+id/questionProgressChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hidden original TextViews for compatibility -->
    <TextView
        android:id="@+id/questionProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Battle Arena Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/battleArenaCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/battle_arena_height"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardBackgroundColor="@color/battle_arena_bg"
        app:cardElevation="@dimen/card_elevation_high"
        app:strokeWidth="@dimen/border_width_thin"
        app:strokeColor="@color/border_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInfoBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_battle_arena">

            <!-- Center guideline for positioning -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/centerGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!-- Knight Character (Player) - Left Side -->
            <ImageView
                android:id="@+id/knightImageView"
                android:layout_width="@dimen/character_size_knight"
                android:layout_height="@dimen/character_size_knight"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerGuideline" />

            <!-- Knight Label -->
            <TextView
                android:id="@+id/knightLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="KNIGHT"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:shadowColor="@color/glow_blue"
                android:shadowRadius="8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/knightImageView"
                app:layout_constraintEnd_toEndOf="@id/knightImageView" />

            <!-- Goblin Character (Opponent) - Right Side -->
            <ImageView
                android:id="@+id/goblinImageView"
                android:layout_width="@dimen/character_size_goblin"
                android:layout_height="@dimen/character_size_goblin"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/centerGuideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Goblin Label -->
            <TextView
                android:id="@+id/goblinLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="GOBLIN"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_red"
                android:textStyle="bold"
                android:shadowColor="@color/gradient_red_end"
                android:shadowRadius="8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/goblinImageView"
                app:layout_constraintEnd_toEndOf="@id/goblinImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Health Bars Section -->
    <LinearLayout
        android:id="@+id/healthBarsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/battleArenaCard">

        <!-- Player Health Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card_glass"
            android:padding="@dimen/spacing_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KNIGHT HP"
                android:textSize="@dimen/text_size_xs"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <ProgressBar
                android:id="@+id/playerHealthBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/health_bar_height"
                android:layout_marginTop="@dimen/spacing_xs"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/health_player"
                android:progressBackgroundTint="@color/health_track" />

            <TextView
                android:id="@+id/playerHealthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:text="HP: 100"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_on_dark"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/spacing_small"
            android:layout_height="0dp" />

        <!-- Opponent Health Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card_glass"
            android:padding="@dimen/spacing_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOBLIN HP"
                android:textSize="@dimen/text_size_xs"
                android:textColor="@color/primary_red"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <ProgressBar
                android:id="@+id/opponentHealthBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/health_bar_height"
                android:layout_marginTop="@dimen/spacing_xs"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/health_opponent"
                android:progressBackgroundTint="@color/health_track" />

            <TextView
                android:id="@+id/opponentHealthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:text="HP: 100"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_on_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/healthBarsLayout">

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_large"
            android:text="Apa ibukota Indonesia?"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Answer Buttons in ScrollView for overflow -->
    <ScrollView
        android:id="@+id/answersScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/answersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton1"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Jakarta"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton2"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Bandung"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton3"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Surabaya"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/answerButton4"
                style="@style/Widget.QuizBattle.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Medan"
                android:textColor="@color/text_on_dark"
                app:strokeColor="@color/border_light"
                app:rippleColor="@color/glow_blue" />
        </LinearLayout>
    </ScrollView>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
