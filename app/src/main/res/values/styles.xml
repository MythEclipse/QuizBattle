<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.QuizBattle.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <style name="Widget.QuizBattle.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">@dimen/border_width_normal</item>
    </style>

    <style name="Widget.QuizBattle.Button.Red" parent="Widget.QuizBattle.Button">
        <item name="backgroundTint">@color/primary_red</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.QuizBattle.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.QuizBattle.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.QuizBattle.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.QuizBattle.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.QuizBattle.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_gray</item>
        <item name="boxStrokeWidth">@dimen/border_width_thin</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="android:textColorHint">@color/text_placeholder</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.QuizBattle.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>
