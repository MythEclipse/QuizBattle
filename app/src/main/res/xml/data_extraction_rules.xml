<?xml version="1.0" encoding="utf-8"?><!--
   Data extraction rules for QuizBattle app (Android 12+)
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include DataStore preferences for auth and user data -->
        <include domain="sharedpref" path="datastore/auth_preferences.preferences_pb"/>
        
        <!-- Include SQLite database for user data and game history -->
        <include domain="database" path="quiz_battle_database"/>
        
        <!-- Exclude temporary offline actions and cache -->
        <exclude domain="sharedpref" path="datastore/offline_actions.preferences_pb"/>
        <exclude domain="cache" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="sharedpref" path="datastore/auth_preferences.preferences_pb"/>
        <include domain="database" path="quiz_battle_database"/>
        
        <!-- Exclude temporary data from device transfer -->
        <exclude domain="sharedpref" path="datastore/offline_actions.preferences_pb"/>
        <exclude domain="cache" path="."/>
    </device-transfer>
</data-extraction-rules>